{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/_generated",
      "!**/opencode.jsonc",
      "!**/components/ui",
      "!**/components/ai-elements"
    ]
  },
  "extends": ["ultracite/core", "ultracite/react"],
  "linter": {
    "rules": {
      "style": {
        "useBlockStatements": "off",
        "noNestedTernary": "info",
        "useConsistentTypeDefinitions": "off",
        "useFilenamingConvention": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noArrayIndexKey": "off",
        "noConsole": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      }
    }
  }
}
