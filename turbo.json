{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env",
    "**/.env.local",
    "**/.env.development",
    "**/.env.development.local",
    "**/.env.production",
    "**/.env.production.local"
  ],
  "globalEnv": [
    "NODE_ENV",
    "PUBLIC_SERVER_ORIGIN",
    "PUBLIC_WEB_ORIGIN",
    "CLERK_SECRET_KEY",
    "PUBLIC_CLERK_PUBLISHABLE_KEY",
    "PUBLIC_CLERK_JWT_KEY",
    "PUBLIC_CLERK_SIGN_IN_URL",
    "PUBLIC_CLERK_SIGN_UP_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
